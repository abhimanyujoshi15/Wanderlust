<% layout("/layouts/boilerplate.ejs") -%>

<body>
    <br>
    <br>
    <div class="row">
        <div class="col-8 offset-2">
    <h3><%=listing.title%></h3>
    </div>
    <div class="card listing-card col-6 offset-2" style="width: 40rem;">
  <img src="<%=listing.image.url%>" class="card-img-top show-img" alt="listing image">
  <div class="card-body">
    <br>
    <i><b>Your Host: &nbsp</b><%=listing.owner.username%></i><br>
    <%=listing.description%><br><br>
    <i><b>What this place offers!</b></i><br>
    <p>✅ Free parking on premises<br>
       ✅ Exterior security cameras on property<br>
       ✅ Daily Cleaning<br>
       ✅ Towels/Shampoo/Body Wash</p>
    &#8377; <%=listing.price.toLocaleString("en-IN")%><br>
    <%=listing.location%>,
    <%=listing.country%></p>
  </div>
</div>
<% if(currUser && currUser._id.equals(listing.owner._id)){%>
    <div class="row">
        <div class="col-1 offset-2">
    <a href="http://localhost:8080/listings/<%=listing._id%>/edit" class="btn btn-danger">Edit</a>
    </div>
    <br>
    <br>
    <br>
    <div class="col-1 offset-1">
    <form method="POST" onsubmit="return confirm('Are you sure you want to delete this?') " action="/listings/<%=listing._id%>?_method=DELETE">
        <button class="btn btn-dark">Delete</button>
    </form>
    </div>
    <%}%>
    <%if(currUser){%>
    <div class="col-8 offset-2 mb-3">
        <h4>Leave a Review!</h4>
        <hr>
        <form method="POST" action="/listings/<%=listing._id%>/reviews" novalidate class="needs-validation">
            <div class="mb-3 mt-3">
                <label for="rating" class="form-label">Rate this property!</label>
                <fieldset class="starability-slot">
                 <input type="radio" id="no-rate" class="input-no-rate" name="rating" value="1" checked aria-label="No rating." />
                 <input type="radio" id="first-rate1" name="rating" value="1" />
                 <label for="first-rate1" title="Terrible">1 star</label>
                 <input type="radio" id="first-rate2" name="rating" value="2" />
                 <label for="first-rate2" title="Not good">2 stars</label>
                 <input type="radio" id="first-rate3" name="rating" value="3" />
                 <label for="first-rate3" title="Average">3 stars</label>
                 <input type="radio" id="first-rate4" name="rating" value="4" />
                 <label for="first-rate4" title="Very good">4 stars</label>
                 <input type="radio" id="first-rate5" name="rating"value="5" />
                 <label for="first-rate5" title="Amazing">5 stars</label>
                </fieldset>
            </div>
            <div class="mb-3 mt-3">
                <label for="comment" class="form-label">How we can improve!</label>
                <textarea name="comment" id="comment" cols="30" rows="5" class="form-control" required></textarea>
                <div class="invalid-feedback">Please add some comments for review!</div>
            </div>
            <div>
                <button class="btn btn-outline-dark">Submit</button>
            </div>
        </form>
        <%}%>
        <hr>
        <% if(listing.reviews.length >0) { %>
            <div class="row">
                <p><b>All Reviews</b><p></p>
        <% for( let review of listing.reviews){%>
        <div class="card col-5 mb-3 ms-3">
        <div class="card-body">
            <h5 class="card-title">@<%=review.owner.username%></h5>
            <p class="card-text"><%=review.comment%></p>
            <p class="starability-result card-text" data-rating="<%=review.rating%>">
  </p>

            <form method="POST" action="/listings/<%=listing._id%>/reviews/<%=review._id%>?_method=DELETE">
                <button class="btn btn-outline-danger btn-sm mb-2">Delete</button>
            </form>
        </div>
        </div>
        <%}%>
        </div>
    </div>
    <% } %>
    </div>
    <div class="col-8 offset-2 mb-3">
            <h4>Where you'll be</h4>
            <div id="map"></div>
<script>
    <%if(listing.geometry){%>
        const map = L.map('map').setView([<%=listing.geometry.lat%>, <%=listing.geometry.lon%>], 13);

        L.tileLayer('https://{s}.tile.openstreetmap.org/{z}/{x}/{y}.png', {
            maxZoom: 19,
        }).addTo(map);

        L.marker([<%=listing.geometry.lat%>, <%=listing.geometry.lon%>]).addTo(map)
            .bindPopup("<b><%= listing.title %></b><br><%= listing.location %>").openPopup();
            <%}%>
</script>

    </div>
    </div>
    </div>
</body>