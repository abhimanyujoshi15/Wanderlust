<% layout("/layouts/boilerplate.ejs") -%>
<body>
    <div class="row">
    <div class="col-8 offset-2">
        <br>
        <br>
        <h3>Edit Your Listing:</h3>
    <form method="POST" action="/listings/<%=listing._id%>?_method=PATCH" novalidate class="needs-validation" enctype="multipart/form-data">
        <div class="mb-3">
       <label for="title" class="form-label">Title</label>
        <input type="text" value="<%=listing.title%>" name="title" class="form-control" required>
        <div class="valid-feedback">Looks good!</div>
        </div>
        <br>
        <div class="mb-3">
        <label for="description" class="form-label">Description</label>
        <textarea name="description" class="form-control" required><%=listing.description%></textarea>
        <div class="invalid-feedback">Description required!</div>
        </div>
        <br>
        <div class="mb-3">
        <label for="image" class="form-label">Original Image</label>
        <img src="<%=listing.image.url%>" alt="listing image">
        </div>
        <br>
        <div class="mb-3">
        <label for="image" class="form-label">Upload New Image</label>
        <input type="file" name="image" class="form-control">
        </div>
        <br>
        <div class="row">
        <div class="col-md-4">
        <div class="mb-3">
        <label for="price" class="form-label">Price</label>
        <input type="number" value="<%=listing.price%>"name="price" class="form-control" required>
        <div class="invalid-feedback">Price required!</div>
        </div>
        </div>
        <br>
        <div class="col-md-8">
        <div class="mb-3">
        <label for="location" class="form-label">Location</label>
        <input type="text" value="<%=listing.location%>" name="location" class="form-control" required>
        <div class="invalid-feedback">Location required!</div>
        </div>
        </div>
        </div>
        <br>
        <div class="mb-3">
        <label for="country" class="form-label">Country</label>
        <input type="text" value="<%=listing.country%>" name="country" class="form-control" required>
        <div class="invalid-feedback">Country required!</div>
        </div>
        <br>
        <button class="btn btn-danger">Save</button>
        <br>
        <br>
        <br>
        <br>
        <br>
    </form>
    </div>
    </div>
</body>